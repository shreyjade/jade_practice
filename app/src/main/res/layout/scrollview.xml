<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/five"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five"
                android:layout_marginRight="@dimen/five"
                android:layout_marginTop="@dimen/five"
                android:layout_toRightOf="@id/image1"
                android:text="@string/hello_world"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv2"
                android:layout_marginBottom="@dimen/five"
                android:layout_marginRight="@dimen/five"
                android:layout_marginTop="@dimen/five"
                android:layout_toRightOf="@id/image1"
                android:text="@string/hello_world"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv2"
                android:layout_marginBottom="@dimen/five"
                android:layout_marginRight="@dimen/five"
                android:layout_marginTop="@dimen/five"
                android:layout_toRightOf="@id/image1"
                android:text="@string/big_text"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/tvb1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/imageb1"
                android:text="@string/big_text"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvb2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvb1"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/imageb1"
                android:text="@string/hello_world"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvb3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvb2"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/imageb1"
                android:text="@string/hello_world"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagec1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/tvc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/imagec1"
                android:text="@string/hello_world"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvc1"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/imagec1"
                android:text="@string/big_text"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvc3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/tvc2"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/imagec1"
                android:text="@string/hello_world"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imaged1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/tvd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/imaged1"
                android:text="@string/hello_world"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvd1"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/imaged1"
                android:text="@string/hello_world"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvd3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/tvd2"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/imaged1"
                android:text="@string/big_text"
                android:textColor="@android:color/white" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
