<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/c4"
        android:layout_width="@dimen/one_hundred"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Center" />

    <Button
        android:id="@+id/c1"
        android:layout_width="@dimen/one_hundred"
        android:layout_height="wrap_content"
        android:layout_above="@id/c4"
        android:layout_centerHorizontal="true"
        android:text="Top" />




    <Button
        android:id="@+id/c3"
        android:layout_width="@dimen/one_hundred"
        android:layout_height="wrap_content"
        android:layout_below="@id/c1"
        android:layout_toRightOf="@id/c1"
        android:text="Right" />


    <Button
        android:id="@+id/c5"
        android:layout_width="@dimen/one_hundred"
        android:layout_height="wrap_content"
        android:layout_below="@id/c3"
        android:layout_centerHorizontal="true"
        android:text="Bottom" />

    <Button
        android:id="@+id/c2"
        android:layout_width="@dimen/one_hundred"
        android:layout_height="wrap_content"
        android:layout_below="@id/c1"
        android:layout_toLeftOf="@id/c4"
        android:text="Left"
        android:layout_alignBottom="@id/c5"
        android:layout_alignTop="@id/c1"/>

</RelativeLayout>
